@{
    ViewData["Title"] = "Home Page";
}
@model List<Expense>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <br />
    <h3>Total Expenses $@ViewBag.Expenses</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>Value</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(Expense e in Model)
                {
                    <tr>
                        <td>
                            @e.id
                        </td>
                        <td>
                            @e.value
                        </td>
                        <td>
                            @e.description
                        </td>
                        <td>
                            <a asp-action="CreateExpense" asp-route-id="@e.id">Edit</a>
                            <a asp-action="DeleteExpense" asp-route-id="@e.id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
